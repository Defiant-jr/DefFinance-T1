{
  "compilerOptions": {
    "allowJs": true,
    "composite": true,
    "target": "ES2020",
    "lib": ["ES2021"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": [
    "vite.config.ts",
    "plugins/**/*.ts",
    "tools/**/*.ts",
    "server/**/*.ts"
  ]
}
